@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<h1>Index Category</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Category

            </a>

        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped table-hover " width:100%">
        <thead>
            <tr class="table-secondary">
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @{
                foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td width="45%">@item.Name</td>
                        <td width="45%">@item.DisplayOrder</td>
                        <td class="w-75 btn-group" width="10%" role="group">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                        </td>
                        <td class="w-75 btn-group" width="10%" role="group">
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>

                }


            }
        </tbody>
    </table>

</div>

